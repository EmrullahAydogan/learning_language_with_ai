# =============================================================================
# AI Language Learning Platform - Environment Variables
# =============================================================================
# Copy this file to .env and update the values
# Command: cp .env.example .env

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/language_learning_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=language_learning_db

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# SECURITY & AUTH
# =============================================================================
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPENAI API (Required for AI features)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
# Alternative models: gpt-4-turbo-preview, gpt-3.5-turbo

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="AI Language Learning Platform"
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# CORS (Frontend URLs)
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NODE_ENV=development

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="AI Language Learning"

# =============================================================================
# STORAGE (Optional - for file uploads)
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# PRODUCTION SETTINGS (Use when deploying)
# =============================================================================
# Uncomment and update these for production:
# DATABASE_URL=postgresql://user:password@prod-db-host:5432/language_learning_db
# REDIS_URL=redis://prod-redis-host:6379/0
# SECRET_KEY=generate-a-new-secure-key-for-production
# DEBUG=false
# ENVIRONMENT=production
# BACKEND_CORS_ORIGINS=["https://yourdomain.com"]
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
